<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimary"
    tools:context="com.example.jan_ove.ms3.Kurs">

    <Button
        android:id="@+id/btn_kurs_video"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:layout_marginStart="71dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/video"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_kurs_literatur"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:layout_marginTop="38dp"
        android:background="@drawable/book"
        app:layout_constraintStart_toStartOf="@+id/btn_kurs_video"
        app:layout_constraintTop_toBottomOf="@+id/btn_kurs_video" />

    <Button
        android:id="@+id/btn_kurs_quiz"
        android:layout_width="@android:dimen/notification_large_icon_height"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:layout_marginTop="31dp"
        android:background="@drawable/quiz"
        app:layout_constraintStart_toStartOf="@+id/btn_kurs_literatur"
        app:layout_constraintTop_toBottomOf="@+id/btn_kurs_literatur" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/passwortsicherheit"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAlignment="center"
        tools:textSize="32sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/video_starten"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_kurs_video"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kurs_video"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:text="@string/wissenswertes_lesen"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_kurs_literatur"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kurs_literatur"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_starten"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_kurs_quiz"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kurs_quiz"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        tools:textSize="18sp" />
</android.support.constraint.ConstraintLayout>
